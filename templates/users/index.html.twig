{% extends 'users.html.twig' %}

{% block title %}Profil de
				{{app.user.firstname}}
				{{app.user.name}}
{% endblock %}

{% block body %}
	<div class="grix xs4 container led">
    {% for message in app.flashes ('message')%}
    <div class="col-xs4">
    <div class="p-3 my-2 rounded-2 success">{{message}}</div>
    </div>
        
    {% endfor %}
		<div class="col-xs4  bg-white text-center">
			<h1>
				Profil de
				{{app.user.firstname}}
				{{app.user.name}}
		
		 {# Nom :<br>
		{{app.user.name}}
		Prenom :<br>
		{{app.user.firstname}} #}
	Email :<br>
	<p class="mb-4px">	{{app.user.email}}</p>
    </div>
        <div class= "col-xs4 bg-white mt-0">
        <a href="{{path('users_modif_profile')}}" class="btn blue mt-2">Modifier le profil</a>
         <a href="{{path('users_modif_pass')}}" class="btn green mt-2 mb-4">Modifier le mot de passe</a>


         
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="col-xs4  text-center">
        <h2> MES ANNONCES </h2>
         {# <h2> Annonce de {{app.user.firstname}} {{app.user.name}} #}
        </div>
       {# <div class="col-xs1">Titre : {{annonce.title}}  #}

	   <table class="table table-striped tableau bg-white ">
	           {% for annonce in app.user.annonces %}

  <thead>
    <tr>
      <th scope="col">titre</th>
      <th scope="col">name</th>
      <th scope="col">firstname</th>
      <th scope="col">date</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> {{annonce.title}} </td>
      <td>{{app.user.name}}</td>
      <td> {{app.user.firstname}}</td>
      <td> {{annonce.createdAt |date('d/m/Y')}}</td>
    </tr>
	  {% endfor %}
	   </tbody>
	   </table>
	         

       </div>
      {% endif %}      
	</div>

{% endblock %}
