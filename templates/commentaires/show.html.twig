{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <h1>Commentaires</h1>

    <table class="table table-dark rounded-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ commentaire.content }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ commentaire.email }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ commentaire.pseudo }}</td>
            </tr>
            <tr>
                <th>Rgpd</th>
                <td>{{ commentaire.rgpd ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ commentaire.createdAt ? commentaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commentaires_index') }}"><buttom class="btn btn-success mb-2"> back to list</buttom></a>

    <a href="{{ path('commentaires_edit', {'id': commentaire.id}) }}"><buttom class="btn btn-primary mb-2">edit</buttom></a>

<buttom class="btn btn-danger mb-2">{{ include('commentaires/_delete_form.html.twig') }}</buttom>
{% endblock %}
